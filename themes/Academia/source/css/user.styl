//customize your own CSS for page display
#page_footer
  position: absolute;
  // bottom : 0;
  // Override default height
  height: 60px;
  width: 100%;

body {
  overflow: auto;
  height: 100%;
}

.page {
  min-height: 100vh;
  // padding-bottom: 100px; /* Prevent footer overlap */
}

.publication-section {
  margin: 3rem 0;
}

.publication-list {
  list-style: none;
  padding-left: 0;
}

.publication-item {
  margin-bottom: 2rem;
  padding-bottom: 1rem;
  border-bottom: 1px solid #eee;
}

.publication-title {
  font-size: 1.2rem;
  font-weight: bold;
}

.publication-authors {
  color: #555;
  margin: 0.5rem 0;
}

.publication-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 0.5rem;
}

.publication-link {
  color: #0066cc;
  text-decoration: none;
  margin-left: 1rem;
}